{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Lifeguard",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "lifeguard"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Lifeguard (Test)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "lifeguard"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "BOT_ENV": "test"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Dev (hot-reload)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["scripts/dev.py"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
