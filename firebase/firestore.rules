rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    // MVP: anyone signed-in (including anonymous) can read/write.
    // Tighten later by requiring admin claims or per-user ownership.
    match /{document=**} {
      allow read, write: if signedIn();
    }
  }
}
